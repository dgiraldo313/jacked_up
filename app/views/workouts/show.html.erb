
<% @Deck1= Deck.new %>
<% @count= 1 %>


<div class="baraja-deck">
	<ul id="baraja-el" class="baraja-container">
	<!-- loop that iterate through deck -->
	<% @Deck1.cards.each  do |card| %>
		<% suit= card.suit.downcase %>
		<% rank= card.rank%>
		<% value= card.value %>
		<li class="next">
		
			<%if suit == "spades" || suit == "clubs" %>
				<div class="black-card">
				<div class= "rank-top"><%= rank%></div>
				<div class= "center-items">
				<div class= "value"><%= value %></div>
				<% if suit == "spades" %>
					<div class="suit">&spades;</div>
					<div class="exercise"><%= @workout.spades.upcase%>
				<% elsif suit == "clubs" %>
					<div class="suit">&clubs;</div>
					<div class="exercise"><%= @workout.clubs.upcase%>
				<% end %>
				</div>
				</div>
				<div class= "rank-bottom"><%= rank%></div>
				</div>

			<%elsif suit == "hearts" || suit == "diamonds"%>
				<div class="red-card">
				<div class= "rank-top"><%= rank%></div>
				<div class= "center-items">
				<div class= "value"><%= value %></div>
				<% if suit == "hearts" %>
					<div class="suit">&hearts;</div>
					<div class="exercise"><%= @workout.hearts.upcase %>
				<% elsif suit == "diamonds" %>
					<div class="suit">&diams;</div>
					<div class="exercise"><%= @workout.diamonds.upcase %>
				<% end %>
				</div>
				</div>
				<div class= "rank-bottom"><%= rank%></div>
				</div>
			
			<% end %>
		
		</li>
		<% @count+= 1 %>
		<% end %>

	</ul>
</div>
<div id="controls-container">
	<div id="controls-box">
		<div id="timer-container">
			<div id="timer">
				<div id="chronotime">00:00</div>
			</div>
		</div>
			<div id="timer-controls">
				<div class="control">
					<div id="prev">Previous</div>
				</div>
				<div class="control">
					<form name="chronoForm" id="form-startstop"/>
		    			<input type="button" name="startstop" value="start!" onClick="chronoStart()" id="start-stop">
					</form>
				</div>
				<div class="control">
					<div id="next">Next</div>
				</div>
			</div>
		</div>
	</div>
</div>

 
  
 <%= javascript_tag do %>
    var $el = $( '#baraja-el' ),
	baraja = $el.baraja();

		$( '.baraja-container' ).on( 'click', function( event ) {

			baraja.next();	

		} );
		$( '#next' ).on( 'click', function( event ) {

			baraja.next();	

		} );
		$( '#prev' ).on( 'click', function( event ) {

			baraja.previous();	

		} );
			
 <% end %>



